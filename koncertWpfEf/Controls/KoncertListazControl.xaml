<UserControl x:Class="koncertWpfEf.Controls.KoncertListazControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:koncertWpfEf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding View}">
        <DataGrid x:Name="dgContext" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Cím" Binding="{Binding Cim}"/>
                <DataGridTextColumn Header="Előadó" Binding="{Binding Eloado}"/>
                <DataGridTextColumn Header="Időpont" Binding="{Binding IdoPont}"/>
                <DataGridTextColumn Header="Létszám" Binding="{Binding Letszam}"/>
                <DataGridTextColumn Header="Ár" Binding="{Binding Ar}"/>

                <DataGridTextColumn Header="Helyszín" Binding="{Binding Helyszin}"/>
                
            </DataGrid.Columns>
            

        </DataGrid>
       
            
    </Grid>
</UserControl>
