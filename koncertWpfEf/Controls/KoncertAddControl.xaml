<UserControl x:Class="koncertWpfEf.Controls.KoncertAddControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:koncertWpfEf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Cim"/>
            <TextBox x:Name="tbCim">
                               
            </TextBox>
            <Label Content="Eloado"/>
            <TextBox x:Name="tbEloado">
            </TextBox>
            <Label Content="Datum"/>
            <DatePicker x:Name="dpDatum" ></DatePicker>
            <Label Content="Létszám"/>
            <TextBox x:Name="tbLetszam">
            </TextBox>
            <Label Content="Jegyár"/>
            <TextBox x:Name="tbJegyar">
            </TextBox>
            <Label Content="Helyszín"/>
            <TextBox x:Name="tbHelyszin">
            </TextBox>
            <Button x:Name="btnAdd" Content="Hozzáad" Click="btnAdd_Click"></Button>

        </StackPanel>
            
    </Grid>
</UserControl>
